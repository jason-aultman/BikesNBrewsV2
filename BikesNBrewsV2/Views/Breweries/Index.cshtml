@{
   
}
<div>
    <h1 class="text-center">Breweries List</h1>
</div>
<table class="table table-striped table-bordered border-dark table-hover">
    <thead class="table-dark">
        <tr>
            <td>
                Name
            </td>
            <td>
                Address
            </td>
            <td>
                City
            </td>
            <td>
                State
            </td>
            <td>
                Zip
            </td>
            <td>
                Brewery Type
            </td>
            <td>
                Website
            </td>
        </tr>

    </thead>
    <tbody>
        @foreach(Brewery b in Model.Breweries)
        {
            <tr>
                <td>
                   @Html.Raw(b.Name)
                </td>
                <td>
                    @Html.Raw(b.Street)
                </td>
                <td>
                    @Html.Raw(b.City)
                </td>
                <td>
                    @Html.Raw(b.State)
                </td>
                <td>
                    @Html.Raw(b.PostalCode)
                </td>
                <td>
                    @Html.Raw(b.BreweryType)
                </td>
                <td>
                    @Html.Display(b.WebsiteUrl)
                </td>
            </tr>
        }
    </tbody>
</table>